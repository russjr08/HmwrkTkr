extends ../layout

block content
    h3 Adding a new Assignment...

    br

    form(method='post').form-horizontal
        div.form-group
            label Assignment Name
            input(type='text', name='name', autocomplete='off').form-control
        div.form-group
            label Assignment Details
            textarea(name='details', rows='5').form-control
        div.form-group
            label Which Class?
            select(name='class_id').form-control
                each Class in classes
                    option(value=Class._id) #{Class.name}
        div.form-group
            button(type='submit').btn.btn-success Create!