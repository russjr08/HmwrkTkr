doctype html
html
    head
        if title
            title HmwrkTrkr  | #{title}
        else
            title HmwrkTrkr
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/style.css')

        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="theme-color", content="#004D40")


    body

        div.navbar.navbar-default.navbar-custom
            div.container-fluid
                div.navbar-header
                    button(type='button', data-toggle='collapse' data-target='.navbar-collapse').navbar-toggle.collapsed
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a(href='/').navbar-brand HmwrkTrkr
                div.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        if req && req.isAuthenticated()
                            li
                                a(href='/manage/classes/').navbar-link Classes
                            li
                                a(href='/manage/assignments/').navbar-link Assignments
                    ul.nav.navbar-nav.navbar-right
                        if req && req.user && req.isAuthenticated()
                            li
                                p.navbar-text.navbar-custom-text Signed in as #{req.user.username}
                            li
                                p.navbar-btn
                                    a(href='/auth/logout', role='button').btn.btn-danger Sign Out
                        else
                            li
                                p.navbar-text.navbar-custom-text Not Signed In
                            li
                                p.navbar-btn
                                    a(href='/auth/login', role='button').btn.btn-primary Sign In
        div.container
            block content

    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js', type='text/javascript')
    script(type='javascript' src='js/bootstrap.js')

